{
  "compilerOptions": {
    /* File locations */
    "rootDir": "src",
    "outDir": "dist",

    /* Language & Module System */
    "module": "nodenext",              // modern ESM
    "moduleResolution": "NodeNext",  // proper ESM resolution
    "target": "ES2022",              // safe Node.js target
    "lib": ["ES2022"],

    /* Node.js support */
    "types": ["node"],

    /* Type Safety */
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Source Maps */
    "sourceMap": true,

    /* Interop */
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    /* For ESM */
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
